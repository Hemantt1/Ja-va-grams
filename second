import java.util.Scanner;

public class git1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        // to ultimately get negative value

        System.out.println("Enter First number : ");
        int a = sc.nextInt();
        System.out.println("Enter Second Number : ");
        int b = sc.nextInt();
        int c;
        if(a>b){
            c = b-a;
            System.out.println("negative vlaue = " + c);
        }
        else {
            c = a-b;
            System.out.println("negative value = " + c);
        }
    }
    
}
